<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/apk/res/android"
    tools2:ignore="NamespaceTypo">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvCheckBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#666666"
        tools:text="Check Balance"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWalletBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCheckBalance"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#9d9d9d"
        android:lineSpacingExtra="-2sp"
        tools:text="Wallet Balance"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWalletBalanceValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWalletBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#00a79d"
        tools:text="UGX 1,00,000"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvKujaBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWalletBalanceValue"
        android:layout_marginTop="@dimen/_19sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="#9d9d9d"
        android:lineSpacingExtra="-2sp"
        tools:text="Kuja Balance"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvKujaBalanceValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKujaBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#00a79d"
        tools:text="UGX 20,000"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOk"
        style="@style/MyBlueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_28sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:textAlignment="center"
        android:text="Ok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKujaBalanceValue"
         />
</androidx.constraintlayout.widget.ConstraintLayout>